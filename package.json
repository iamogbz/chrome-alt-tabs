        "extension",
        "google",
        "productivity",
        "tabs"
    ],
    "author": "iamogbz",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/iamogbz/chrome-alt-tabs/issues"
    },
    "homepage": "https://github.com/iamogbz/chrome-alt-tabs#readme",
    "engines": {
        "node": ">=10.4.0",
        "npm": ">=6.1.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.1.5",
        "@babel/core": "^7.1.6",
        "@babel/preset-env": "^7.1.6",
        "@babel/preset-typescript": "^7.3.3",
        "@types/chrome": "0.0.81",
        "@types/copy-webpack-plugin": "^4.4.3",
        "@types/node": "^11.9.5",
