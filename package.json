{
    "scripts": {
        "build": "webpack --mode=production",
        "watch": "webpack --mode=development  --watch",
        "test": "jest",
        "check-types": "tsc",
        "precommit": "lint-staged"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "lint-staged": {
        "linters": {
