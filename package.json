{
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iamogbz/chrome-alt-tabs.git"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/chrome-alt-tabs/issues"
    },
    "homepage": "https://github.com/iamogbz/chrome-alt-tabs#readme",
    "license": "GPL-3.0",
    "keywords": [
        "chrome",
        "extension",
        "google",
        "productivity",
        "tabs"
    ],
    "engines": {
        "node": ">=10.4.0",
        "npm": ">=6.1.0"
    },
    "scripts": {
        "commitlint": "commitlint-travis",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development  --watch",
        "test": "jest",
        "test-watch": "jest --watch",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            [
                "semantic-release-chrome",
                {
                    "asset": "cats.zip",
                    "extensionId": "ebdcpdepkbefmgfdkdplcmhfkddagfon"
                }
            ],
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "cats.zip"
                        }
                    ]
                }
            ]
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "setupFilesAfterEnv": [
            "./config/setupTests.ts"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "transform": {
            "\\.html$": "jest-raw-loader"
        },
        "coverageDirectory": "./artifacts/coverage",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "moduleFileExtensions": [
            "node",
            "js",
            "jsx",
            "json",
            "ts",
            "tsx",
            "html"
        ]
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "eslint"
            ],
            "*.ts": [
                "tslint"
            ],
            "*.{js,ts}": [
                "jest --bail --findRelatedTests"
            ]
        },
        "ignore": [
            "**/dist/*"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.6.4",
        "@babel/preset-typescript": "^7.7.4",
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@commitlint/travis-cli": "^8.2.0",
        "@semantic-release/changelog": "^3.0.4",
        "@types/chrome": "^0.0.90",
        "@types/copy-webpack-plugin": "^5.0.0",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.12",
        "@types/webpack": "^4.41.0",
        "acorn": "^7.1.0",
        "ajv": "^6.10.2",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.0.5",
        "babel-runtime": "^6.26.0",
        "commitizen": "^4.0.2",
        "copy-webpack-plugin": "^5.0.5",
        "coveralls": "^3.0.7",
        "cz-conventional-changelog": "^3.0.2",
        "eslint": "^6.7.0",
        "husky": "^3.0.0",
        "jest": "^24.1.0",
        "jest-mock-props": "^1.7.1",
        "jest-raw-loader": "^1.0.1",
        "lint-staged": "^9.4.3",
        "prettier": "^1.17.0",
        "prettier-eslint": "^9.0.1",
        "prettier-tslint": "^0.4.2",
        "responsive-json-webpack-plugin": "^1.5.2",
        "rxjs": "^6.4.0",
        "semantic-release": "^15.13.31",
        "semantic-release-chrome": "^1.1.2",
        "sinon-chrome": "^3.0.1",
        "ts-jest": "^24.0.0",
        "ts-node": "^8.5.2",
        "tslint": "^5.20.1",
        "typescript": "^3.3.3333",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10"
    },
    "dependencies": {
        "@babel/polyfill": "^7.2.5",
        "crx-livereload": "^0.2.1"
    }
}
