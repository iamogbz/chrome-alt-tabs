{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": { "*": ["*", "../tests/*", "../tests/@types/*"] },
        "outDir": "./built",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true
    },
    "exclude": ["node_modules"]
}
